<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Assignment8and10.EmployeeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="employeeIdField" promptText="Employee ID"/>
    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="ageField" promptText="Age"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="departmentField" promptText="Department"/>

    <Button text="Create Employee Table" onAction="#onCreateTableButtonClick"/>
    <Button text="Register Employee" onAction="#onRegisterButtonClick"/>
    <Button text="View Employees" onAction="#onViewButtonClick"/>
    <Button text="Update Employee" onAction="#onUpdateButtonClick"/>

    <Label fx:id="statusLabel"/>
</VBox>
